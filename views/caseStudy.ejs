<body>
    <div id="data"></div>

    <div class="container3">
        <div class="card card-blue">
            <h2>Start Your Affiliate Network Today</h2>
            <p>Launch your affiliate network with OffersHubâ€”track, boost conversions, and grow revenue effortlessly.</p>
            <a href="https://offershub.com/signup/?source=newsletter21" class="button button-blue">Try it for free
                now!</a>
        </div>
        <div class="card card-gray">
            <h2>Schedule Demo with Our Experts</h2>
            <p>Book a demo with our experts to explore powerful features and maximize your affiliate growth.</p>
            <a href="https://calendly.com/palak-5acl/30min" class="button button-gray">Book a demo</a>
        </div>
    </div>

    <div class="container2">
        <div class="header2">Recent Blogs</div>
        <div class="stories" id="recent_blogs"></div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", async (event) => {
            let pathName = location.pathname;
            pathName = pathName.split('/')
            const contentId = pathName[pathName.length - 1]
            let blog = await fetch(`/content/get/${contentId}`)
            blog = await blog.json()
            console.log(blog)
            document.getElementById('data').innerHTML = blog.data.content
            document.getElementById('title').innerHTML = blog.data.title

            let blogs = await fetch('/content/get/all?type=blog')
            blogs = await blogs.json()
            console.log(blogs)

            if (blogs.status) {
                blogs = blogs.data.slice(0, 3)
                for (let blog of blogs) {
                    if (blog.isPublished === true) {
                        document.getElementById('recent_blogs').innerHTML += `<div class="story">
                <div class="date">${blog.createdAt}</div>
                <img src="${blog.cover_image}" alt="blog-${blog._id}" onerror="if (this.src != 'https://placehold.co/1200x400') this.src = 'https://placehold.co/1200x400';">
                <p><a href="/blog/${blog._id}" class="title">${blog.title}</a></p>
                <p>${blog.category}</p></div>`
                    }
                }
            } else {
                document.getElementById('blogs').innerHTML = 'No Blog'
            }
        })
    </script>
    <script src="/js/timeConvert.js"></script>
