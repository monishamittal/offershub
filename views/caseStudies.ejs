<html>
<%- include('partials/head') -%>

<body>
  <%- include('partials/header') -%>
  <%- include('partials/chatbot') -%>
  <!-- <%- include('partials/totop') -%> -->
  <!-- <%- include('partials/loader') -%> -->
  <main>
    <div class="home-container" style="background-color: #d9eeff;width: 90%;margin: auto;border-radius: 50px;">
      <div class="home-contain">
        <div class="main-contain">
          <button class="button1" style="margin: 40px 0px ; padding: 0.3rem 2rem;"><span>Tips & Guides</span></button>
          <h1 class="block" style="font-size: 32px;">Smart Spending, Better Tracking</h1>
          <p>Easily take control of your mobile subscriptions with these <b>effortless</b> tracking steps to save money, avoid surprises, and stay organized.</p>
        </div>
        <div class="video-container block">
          <img src="/img/blog.png" alt="" height="200">
        </div>
      </div>
    </div>


    <div class="container1">
      <div class="header1">Success Stories</div>
      <div class="stories" id="caseStudy"></div>
    </div>
  </main>
  <%- include('partials/footer') -%>

  <script>
    document.addEventListener("DOMContentLoaded", async (event) => {
      let caseStudy = await fetch('/content/get/all?type=case-study')
      caseStudy = await caseStudy.json()

      if (caseStudy.status) {
        for (let caseS of caseStudy.data) {
          if (caseS.isPublished === true) {
            document.getElementById('caseStudy').innerHTML += `<div class="story">
                <img src="${caseS.cover_image}" alt="caseStudy-${caseS._id}" onerror="if (this.src != 'https://placehold.co/1200x400') this.src = 'https://placehold.co/1200x400';">
                <p class="date">Story - ${convertTime(caseS.createdAt)}</p>
                <p><a href="/case-study/${caseS._id}" class="title">${caseS.title}</a></p>
                <p>${caseS.category}</p>
                 <div class="read"><a href="/case-study/${caseS._id}" class="title">Read more &#8594;</a></div></div>`
          }
        }
      } else {
        document.getElementById('caseStudy').innerHTML = '<div class="story"><p>No Story<p></div>'
      }
    });
  </script>
  <script src="/js/timeConvert.js"></script>
</body>

</html>