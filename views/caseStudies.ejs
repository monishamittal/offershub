<html>

<head>
    <title>Success Stories</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #ffffff;
            color: #333333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            font-size: 24px;
            /* font-weight: 700; */
            margin-bottom: 40px;
            color: #1A1A1A;
        }

        .stories {
            display: flex;
            /* justify-content: space-between; */
            gap: 20px;
            /* flex-direction: column-reverse; */
            flex-wrap: wrap;
        }

        .story {
            flex: 1;
            padding: 20px;
            border: 1px solid #E0E0E0;
            border-radius: 8px;
            background-color: #ffffff;
            max-width: 276px;
        }

        .story h3 {
            font-size: 18px;
            font-weight: 700;
            color: #1A1A1A;
            margin: 10px 0;
        }

        .story p {
            font-size: 14px;
            color: #666666;
            margin: 10px 0;
        }

        .story .date {
            font-size: 12px;
            color: #999999;
            margin-bottom: 10px;
        }

        img {
            width: 276px;
            height: 180px;
            border-radius: 8px;
            object-fit: cover;
        }

        .title {
            color: black;
            text-decoration: none;
            font-size: 20px;
            letter-spacing: -1px;

            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        @media (max-width: 768px) {
            .stories {
                flex-direction: column;
            }
        }

        @media (max-width: 480px) {
            .header {
                font-size: 20px;
                margin-bottom: 20px;
            }

            .story h3 {
                font-size: 16px;
            }

            .story p {
                font-size: 12px;
            }

            .story .date {
                font-size: 10px;
            }
        }
    </style>
</head>

<body onload="getAllBlogs()">
    <div class="container">
        <div class="header">Success Stories</div>
        <div class="stories" id="caseStudy"></div>
    </div>
    <script>
        async function getAllBlogs() {
            let caseStudy = await fetch('/content/get/all?type=case-study')
            caseStudy = await caseStudy.json()
            console.log(caseStudy)

            if (caseStudy.status) {
                for (let caseS of caseStudy.data) {
                    if (caseS.isPublished === true) {
                        document.getElementById('caseStudy').innerHTML += `<div class="story">
                <div class="date">Story - ${convertTime(caseS.createdAt)}</div>
                <img src="${caseS.cover_image}" alt="caseStudy-${caseS._id}" onerror="if (this.src != 'https://placehold.co/1200x400') this.src = 'https://placehold.co/1200x400';">
                <p><a href="/case-study/${caseS._id}" class="title">${caseS.title}</a></p>
                <p>${caseS.category}</p></div>`
                    }
                }
            } else {
                document.getElementById('caseStudy').innerHTML = 'No Story'
            }
        }
    </script>
    <script src="/js/timeConvert.js"></script>
</body>

</html>