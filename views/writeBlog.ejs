<html>

<head>
    <title>
        Write a Blog
    </title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .header {
            display: flex;
            align-items: center;
            padding: 10px 20px;
            background-color: #ffffff;
            border-bottom: 1px solid #ddd;
        }

        .header img {
            width: 130px;
            height: 30px;
        }

        .header .back-icon {
            font-size: 24px;
            margin-right: 20px;
            cursor: pointer;
            color: #333;
        }

        .editor-container {
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }

        .editor-title {
            width: 100%;
            padding: 15px;
            font-size: 28px;
            border: none;
            border-bottom: 2px solid #ddd;
            outline: none;
            font-weight: 500;
        }

        .toolbar {
            display: flex;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #ddd;
            flex-wrap: wrap;
        }

        .toolbar button {
            background: none;
            border: none;
            margin: 5px;
            cursor: pointer;
            font-size: 18px;
            color: #333;
        }

        .toolbar button i {
            font-size: 20px;
        }

        .editor-content {
            width: 100%;
            height: 500px;
            padding: 20px;
            background-color: #ffffff;
            border: none;
            outline: none;
            resize: none;
            font-size: 16px;
            line-height: 1.6;
            font-weight: 400;
        }

        @media (max-width: 768px) {
            .editor-title {
                font-size: 24px;
            }

            .toolbar button {
                font-size: 16px;
            }

            .toolbar button i {
                font-size: 18px;
            }
        }

        @media (max-width: 480px) {
            .editor-title {
                font-size: 20px;
            }

            .toolbar button {
                font-size: 14px;
            }

            .toolbar button i {
                font-size: 16px;
            }

            .editor-content {
                height: 400px;
            }
        }
    </style>
</head>

<body>
    <div class="header">
        <a href="/blogs"><i class="fas fa-arrow-left back-icon"></i></a>
        <img alt="Blogger logo" height="30" src="/img/offershublogo.png" width="130" />
    </div>
    <div class="editor-container">
        <input class="editor-title" placeholder="Enter Title Here" type="text" />
        <div class="toolbar">
            <button data-prefix="&lt;b&gt;" data-suffix="&lt;/b&gt;" title="Bold">
                <i class="fas fa-bold">
                </i>
            </button>
            <button data-prefix="&lt;i&gt;" data-suffix="&lt;/i&gt;" title="Italic">
                <i class="fas fa-italic">
                </i>
            </button>
            <button data-prefix="&lt;u&gt;" data-suffix="&lt;/u&gt;" title="Underline">
                <i class="fas fa-underline">
                </i>
            </button>
            <button data-prefix="&lt;p&gt;" data-suffix="&lt;/p&gt;" title="Paragraph">
                <i class="fas fa-paragraph">
                </i>
            </button>
            <button data-prefix="&lt;h1&gt;" data-suffix="&lt;/h1&gt;" title="Heading 1">
                <i class="fas fa-heading">
                </i>
                1
            </button>
            <button data-prefix="&lt;h2&gt;" data-suffix="&lt;/h2&gt;" title="Heading 2">
                <i class="fas fa-heading">
                </i>
                2
            </button>
            <button data-prefix="&lt;ul&gt;" data-suffix="&lt;/ul&gt;" title="Unordered List">
                <i class="fas fa-list-ul">
                </i>
            </button>
            <button data-prefix="&lt;ol&gt;" data-suffix="&lt;/ol&gt;" title="Ordered List">
                <i class="fas fa-list-ol">
                </i>
            </button>
            <button data-prefix="&lt;blockquote&gt;" data-suffix="&lt;/blockquote&gt;" title="Blockquote">
                <i class="fas fa-quote-right">
                </i>
            </button>
            <button data-prefix="&lt;a href=''&gt;" data-suffix="&lt;/a&gt;" title="Hyperlink">
                <i class="fas fa-link">
                </i>
            </button>
            <button data-prefix="&lt;img src='' alt=''&gt;" data-suffix="" title="Image">
                <i class="fas fa-image">
                </i>
            </button>
            <button data-prefix="&lt;code&gt;" data-suffix="&lt;/code&gt;" title="Code">
                <i class="fas fa-code">
                </i>
            </button>
            <a href="/preview"><button><i class="fa fa-eye" aria-hidden="true"></i> Preview</button></a>
        </div>
        <textarea class="editor-content" placeholder="Start writing..."></textarea>
    </div>
    <script>
        // Add event listeners to toolbar buttons
        document.querySelectorAll('.toolbar button').forEach(button => {
            button.addEventListener('click', () => {
                const prefix = button.getAttribute('data-prefix'); // Get prefix from button
                const suffix = button.getAttribute('data-suffix'); // Get suffix from button
                const editorContent = document.querySelector('.editor-content');

                // Check if there is selected text
                if (editorContent.selectionStart !== undefined) {
                    const startPos = editorContent.selectionStart;
                    const endPos = editorContent.selectionEnd;

                    // Get selected text and wrap it with prefix and suffix
                    const selectedText = editorContent.value.substring(startPos, endPos);
                    const textBefore = editorContent.value.substring(0, startPos);
                    const textAfter = editorContent.value.substring(endPos);
                    editorContent.value =
                        textBefore + prefix + selectedText + suffix + textAfter;

                    // Restore the selection to include the newly added strings
                    editorContent.selectionStart = startPos;
                    editorContent.selectionEnd = startPos + prefix.length + selectedText.length + suffix.length;

                    // Focus back on the editor content
                    editorContent.focus();
                }
            });
        });
    </script>
</body>

</html>