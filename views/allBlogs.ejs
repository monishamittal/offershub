<html>
<%- include('partials/head') -%>

<body>
  <%- include('partials/header') -%>
  <%- include('partials/chatbot') -%>
  <!-- <%- include('partials/totop') -%> -->
  <!-- <%- include('partials/loader') -%> -->

  <main>
    <div class="home-container" style="background-color: #d9eeff;width: 90%;margin: auto;border-radius: 50px;">
        <div class="home-contain">
          <div class="main-contain">
            <button class="button1" style="margin: 40px 0px ; padding: 0.3rem 2rem;"><span>Tips & Guides</span></button>
            <h1 class="block" style="font-size: 32px;">Smart Spending, Better Tracking</h1>
            <p>Easily take control of your mobile subscriptions with these <b>effortless</b> tracking steps to save money, avoid surprises, and stay organized.</p>
          </div>
          <div class="video-container block">
            <img src="/img/blog.png" alt="" height="200" >
          </div>
        </div>
      </div>

    <div class="container1">
      <div class="header1">Product Updates,News and Articles</div>
      <div class="stories" id="blogs"></div>
    </div>
  </main>
  <%- include('partials/footer') -%>

  <script>
    document.addEventListener("DOMContentLoaded", async (event) => {
      let blogs = await fetch('/content/get/all?type=blog')
      blogs = await blogs.json()

      if (blogs.status) {
        for (let blog of blogs.data) {
          if (blog.isPublished === true) {
            document.getElementById('blogs').innerHTML += `<div class="story">
                <img src="${blog.cover_image}" alt="blog-${blog._id}" onerror="if (this.src != 'https://placehold.co/1200x400') this.src = 'https://placehold.co/1200x400';">
                 <p class="date">Tips & Guides - ${convertTime(blog.createdAt)}</p>
                <p><a href="/blog/${blog._id}" class="title">${blog.title}</a></p>
                <p>${blog.category}</p>
                <div class="read"><a href="/blog/${blog._id}" class="title">Read more </a></div></div>`
          }
        }
      } else {
        document.getElementById('blogs').innerHTML = 'No Blog'
      }
    });
  </script>
  <script src="/js/timeConvert.js"></script>
</body>

</html>