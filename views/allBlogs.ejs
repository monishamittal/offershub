<html>

<head>
    <title>Product Updates,News and Articles</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #ffffff;
            color: #333333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            font-size: 24px;
            /* font-weight: 700; */
            margin-bottom: 40px;
            color: #1A1A1A;
        }

        .stories {
            display: flex;
            /* justify-content: space-between; */
            gap: 20px;
            /* flex-direction: column-reverse; */
        }

        .story {
            flex: 1;
            padding: 20px;
            border: 1px solid #E0E0E0;
            border-radius: 8px;
            background-color: #ffffff;
            max-width: 276px;
        }

        .story h3 {
            font-size: 18px;
            font-weight: 700;
            color: #1A1A1A;
            margin: 10px 0;
        }

        .story p {
            font-size: 14px;
            color: #666666;
            margin: 10px 0;
        }

        .story .date {
            font-size: 12px;
            color: #999999;
            margin-bottom: 10px;
        }

        img {
            width: 276px;
            height: 180px;
            border-radius: 8px;
            object-fit: cover;
        }

        .title {
            color: black;
            text-decoration: none;
            font-size: 20px;
            letter-spacing: -1px;
        }

        @media (max-width: 768px) {
            .stories {
                flex-direction: column;
            }
        }

        @media (max-width: 480px) {
            .header {
                font-size: 20px;
                margin-bottom: 20px;
            }

            .story h3 {
                font-size: 16px;
            }

            .story p {
                font-size: 12px;
            }

            .story .date {
                font-size: 10px;
            }
        }
    </style>
</head>

<body onload="getAllBlogs()">
    <div class="container">
        <div class="header">Product Updates,News and Articles</div>
        <div class="stories" id="blogs"></div>
    </div>
    <script>
        async function getAllBlogs() {
            let blogs = await fetch('/blog/get/all')
            blogs = await blogs.json()
            console.log(blogs)

            for (let blog of blogs.data) {
                if (blog.isPublished === true) {
                    document.getElementById('blogs').innerHTML += `<div class="story">
                <div class="date">${blog.createdAt}</div>
                <img src="${blog.cover_image}" alt="blog-${blog._id}">
                <p><a href="/blog/${blog._id}" class="title">${blog.title}</a></p>
                <p>${blog.category}</p>
            </div>`
                }
            }
        }
    </script>
</body>

</html>