            color: #1A1A1A;
            margin: 10px 0;
        }

        .story p {
            font-size: 14px;
            color: #666666;
            margin: 10px 0;
        }

        .story .date {
            font-size: 12px;
            color: #999999;
            margin-bottom: 10px;
        }

        @media (max-width: 768px) {
            .stories {
                flex-direction: column;
            }
        }

        @media (max-width: 480px) {
            .header {
                font-size: 20px;
                margin-bottom: 20px;
            }

            .story h3 {
                font-size: 16px;
            }

            .story p {
                font-size: 12px;
            }

            .story .date {
                font-size: 10px;
            }
        }
