    <script>
        async function getBlogById() {
            let blog_id = location.pathname;
            blog_id = blog_id.split('/')
            blog_id = blog_id[blog_id.length - 1]

            let blog = await fetch(`/blog/get/${blog_id}`)
            blog = await blog.json()
            console.log(blog)

            document.getElementById('data').innerHTML = blog.data.content

